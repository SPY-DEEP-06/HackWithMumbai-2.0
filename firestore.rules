rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /registrations/{registrationId} {
      // Allow any authenticated user to create a registration
      allow create: if isAuthenticated();
      
      // Allow users to read their own registration
      // NOTE: For the Admin Panel to work with the current client-side implementation, 
      // we are allowing ALL authenticated users to list/read. 
      // In a strict production environment, you would use Custom Claims for admins.
      allow read: if isAuthenticated();
      
      // Allow users to update ONLY their own registration (e.g. for payment status)
      allow update: if isAuthenticated() && (
        isOwner(resource.data.userId) || 
        // Allow if it's a new field being added (like payment info)
        request.resource.data.userId == request.auth.uid
      );
      
      // Only allow admin (or no-one) to delete
      allow delete: if false; 
    }
  }
}
